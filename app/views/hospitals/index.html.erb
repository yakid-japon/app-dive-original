         <%= form_tag hospitals_path, method: 'get' do %>
          <div style="margin-bottom:5%;
          box-shadow:2px 2px 5px;">
            <div class="input-group col-md-12">
              <%= text_field_tag :search, params[:search], class: "form-control input-lg", placeholder: "Search"%>
               <span class="input-group-btn">   
                  <%= submit_tag "Search", :hospi_name => nil, class: "btn btn-lg", id: "custom-button" %>
               </span>
            </div>
          </div>
          <% end %>

        <div class="row">

        <% @hospitals.each do |hospital| %>
          <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4">
            <div class="icon-box">
              <% if hospital.id==1 %>
              <div class="icon"><i class="fas fa-heartbeat"></i></div>
              <% elsif hospital.id==2 %>
              <div class="icon"><i class="fas fa-pills"></i></div>
              <% elsif hospital.id==3 %>
              <div class="icon"><i class="fas fa-hospital-user"></i></div>
              <% elsif hospital.id==4 %>
              <div class="icon"><i class="fas fa-dna"></i></div>
              <% elsif hospital.id==5 %>
              <div class="icon"><i class="fas fa-wheelchair"></i></div>
              <% elsif hospital.id==6 %>
              <div class="icon"><i class="fas fa-notes-medical"></i></div>
              <% elsif hospital.id % 2== 0%>
              <div class="icon"><i class="fas fa-heartbeat"></i></div>
              <% else %>
              <div class="icon"><i class="fas fa-pills"></i></div>
              <% end %>
              <h4><a href=""><%= hospital.hospi_name %></a></h4>
              <p><%= hospital.hospi_adresse %></p>
              <p><%= link_to I18n.t('views.buttons.watchYet'), hospital, class: "badge bg-success", style:"font-size: 12px" %>
              </p>
            </div>
          </div>
        <% end %>


        </div>

      </div>
    </section><!-- End Services Section -->


